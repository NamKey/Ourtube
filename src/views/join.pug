extends layouts/main

block content
    .form-container
        form(action=routes.postJoin,method="post",multipart='urlencoded')
            input(type="text",name="name",placeholder="Nick Name" ,required=true)
            input(type="email",name="email",placeholder="Email" ,required=true)
            input(type="password",name="password",placeholder="Password" ,required=true)
            input(type="password",name="verifypassword",placeholder="Verify Password" ,required=true)
            input(type="submit",value="Sign Up")
        include partials/socialLogin